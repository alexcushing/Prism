extends layout

block content
    .container
        #myStyle
            h1 Prism
            p.lead Be sure to fill out each section
            br
            form(role='form', action="/register",method="post", style='max-width: 300px;')
                .form-group
                    input.form-control(type='text', name="username", placeholder='Enter Username')
                .form-group
                    input.form-control(type='text', name="name", placeholder='Full Name')
                .form-group
                    input.form-control(type='password', name="password", placeholder='Password')
                .form-group
                    input.form-control(type='text', name="title", placeholder='Title')
                .form-group
                    input.form-control(type='text', name="propic", placeholder='Profile Picture (image link)')
                    br
                    br
                button.btn.btn-default(type='submit') Submit
                a(href='/')
                        button.btn.btn-primary(type="button") Cancel
            &nbsp;
    h4= info
