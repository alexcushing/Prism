extends layout
<link type="text/css" rel="stylesheet" href="public/stylesheets/style.css" />
block content
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register

  if (user)
    #logoText
      .lead prism
    .container
        #myStyle
          img#proP.myClass(src= " " + user.propic)
          .myClass
            h1 #{user.fullname}
            #myTitle
                p <em>#{user.title}</em>
    a(href="/logout") Logout
