extends layout
block content
    #logoText
        p PRISM
    if(currentuser)
        #selLog
            a(href="/")
                button.btn.btn-primary(type="button") My Profile
            a(href="/logout")
                button.btn.btn-primary(type="button") Logout
    if(!currentuser)
        #selLog
            a(href="/login")
                button.btn.btn-primary(type="button") Login
    .container
        #myStyle
            img#proP.myClass(src= " " + usr.propic)
            .myClass
                h1 #{usr.fullname}
                #myUserTitle
                    p <em>#{usr.title}</em>