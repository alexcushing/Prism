extends layout

block content
    .container
        #myStyle
            h1 Login Page
            p.lead don't mess up
            br
            form(role='form', action="/login",method="post", style='max-width: 300px;', id="login")
                .form-group
                    input.form-control(type='text', name="username", placeholder="Username" required)
                .form-group
                    input.form-control(type='password', name="password", placeholder="Password" required)
                    br
                    br
                button.btn.btn-default(type='submit') Submit
                a(href='/')
                    button.btn(type="button") Cancel
            &nbsp;

